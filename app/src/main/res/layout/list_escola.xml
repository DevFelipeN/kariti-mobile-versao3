<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Base.Theme.Kariti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/borda_botao"
        style="@style/FUNDONOMES"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewNomeScol"
            style="@style/COLORTEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/imageViewIcon"
            android:text="@string/nomeEscola"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_arrownext"
            android:contentDescription="@string/texticondirecional"
            style="@style/SETADIRECIONAL" />

    </RelativeLayout>


</LinearLayout>
